---
interface Props {
  type: 'prev' | 'next';
  href: string;
}

const { type, href } = Astro.props as Props;
---

{
  href === '' ? (
    <span class="text-base tracking-wider text-slate-700"> </span>
  ) : type === 'prev' ? (
    <a href={href} aria-label="previous page" class="group mr-2 flex gap-1 text-base tracking-wider text-slate-700">
      <span class="duration-150 group-hover:text-teal-500">
        <span class="material-icons">chevron_left</span>
      </span>
      <span class="duration-150 group-hover:text-teal-500"> PREV </span>
    </a>
  ) : (
    <a href={href} aria-label="next page" class="group ml-2 flex gap-1 text-base tracking-wider text-slate-700">
      <span class="duration-150 group-hover:text-teal-500"> NEXT </span>
      <span class="duration-150 group-hover:text-teal-500">
        <span class="material-icons">chevron_right</span>
      </span>
    </a>
  )
}
