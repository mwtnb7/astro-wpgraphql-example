---
import type { HTMLTag } from 'astro/types';
import Container from '@components/layout/Container';

interface Props {
  main: string;
  sub?: string;
  mainTag?: 'h1' | 'div';
}

const { main, sub, mainTag = 'h1' } = Astro.props;

const Element: HTMLTag = mainTag;
---

<div class="bg-gray-50 px-4 md:px-24 py-8 md:py-16">
  <Container>
    {sub && <span>{sub}</span>}
    <Element class="text-3xl lg:text-4xl font-bold pt-3" {...mainTag === 'div' ? { role: 'heading' } : {}}
      >{main}</Element
    >
  </Container>
</div>
